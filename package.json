    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "sqlite3": "^5.0.2",
        "ts-node": "^10.4.0",
        "web3": "^1.6.1"
    },
    "devDependencies": {
        "@types/chai": "^4.3.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/mocha": "^9.0.0",
        "@types/sqlite3": "^3.1.7",
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "chai": "^4.3.4",
